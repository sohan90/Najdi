<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="2.5"
        android:shape="ring"
        android:thickness="4dp">

        <size
            android:width="48dp"
            android:height="48dp" />

        <gradient
            android:centerColor="@color/primary_text_orange"
            android:centerY="0.50"
            android:endColor="@color/primary_text_white"
            android:startColor="@color/primary_text_orange"
            android:useLevel="false" />
    </shape>
</rotate>