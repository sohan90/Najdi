<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.najdi.android.najdiapp.checkout.model.OrderResponse" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_transparent"
        android:padding="10dp">


        <ImageView
            android:id="@+id/tick"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_check_circle_black_24dp" />

        <TextView
            android:id="@+id/order_rec_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tick"
            android:layout_centerHorizontal="true"
            android:text="Order Received"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/thank_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_rec_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/thank_you_order_has_been_received"
            android:textColor="@color/grey_text"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thank_msg"
            android:layout_alignTop="@id/vertical_line"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@id/vertical_line"
            android:gravity="center"
            android:text="@string/order_number"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_title"
            android:layout_toStartOf="@id/vertical_line"
            android:gravity="center"
            android:text="@{viewModel.order_key}"
            android:textColor="@color/grey_text"
            android:textSize="15sp" />

        <View
            android:id="@+id/vertical_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_txt"
            android:layout_below="@id/thank_msg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:background="@color/grey_text" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thank_msg"
            android:layout_alignTop="@id/vertical_line"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/vertical_line"
            android:gravity="center"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/total"
            android:layout_toEndOf="@id/vertical_line"
            android:gravity="center"
            android:text="@{viewModel.total}"
            android:textColor="@color/grey_text"
            android:textSize="15sp" />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/order_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/grey_text" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontal_line"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@id/vertical_line"
            android:gravity="center"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_txt"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/vertical_line"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/grey_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontal_line"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/vertical_line"
            android:gravity="center"
            android:text="@string/payment_method"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_method"
            android:layout_toEndOf="@id/vertical_line"
            android:gravity="center"
            android:text="@{viewModel.payment_method}"
            android:textColor="@color/grey_text"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/bottom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/our_bank_accounts"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</layout>