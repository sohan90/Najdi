<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_eighty"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/shipping_details"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:inputType="none"
            android:padding="10dp"
            android:text="Name" />

        <EditText
            android:id="@+id/ph_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:padding="10dp"
            android:text="phone" />

        <EditText
            android:id="@+id/em_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ph_txt"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:padding="10dp"
            android:text="Email" />

        <TextView
            android:id="@+id/select_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/em_txt"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:padding="10dp"
            android:text="@string/select_shipping_address_from_map" />

        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/select_title"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/continue_txt"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close_black_24dp" />

            <TextView
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/close"
                android:layout_toStartOf="@id/close"
                android:text="------"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/locaiton_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place"
                android:hint="@string/enter_location_name" />

            <Button
                android:id="@+id/fav_location_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locaiton_name_txt"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_corner_solid_green_selector"
                android:text="@string/save_to_favourite_location"
                android:textColor="@color/white" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_location_btn"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner_stroke_green_selector"
                android:text="@string/cancel"
                android:textColor="@color/green_default" />

        </RelativeLayout>

        <Button
            android:id="@+id/continue_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/green_default"
            android:text="@string/continue_txt"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>
